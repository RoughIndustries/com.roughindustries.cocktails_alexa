// file /speechAssets/commPhrases.stg
echoSpeechRecipe(cocktail) ::= "To make a $cocktail.name$ <break strength='strong' />  $if(cocktail.use_sponsor_audio)$ Sponsored By <audio src=\"$cocktail.sponsor_audio_link$\"/> $endif$ <break strength='strong' /> serve in<break strength='strong' /> $cocktail.drinkware$ <break strength='strong' /> ingredients<break strength='strong' /> $cocktail.recipeSteps:{recipe|<say-as interpret-as=\"fraction\">$recipe.speech_cardinal_frac$</say-as> $recipe.pluralized_doze$ $if(recipe.ingredient.use_sponsored_name)$ $recipe.ingredient.sponsored_name$ $else$ $recipe.ingredient.name$ $endif$ <break strength='weak' /> }$<break strength='strong' />  garnish<break strength='medium' /> $cocktail.garnish$<break strength='strong' />  $cocktail.method$"

echoCardRecipe(cocktail) ::= "To make a $cocktail.name$$\n$Drinkware:$cocktail.drinkware$$\n$Ingredients$\n$$cocktail.recipeSteps:{recipe|$recipe.text_cardinal_frac$ $recipe.pluralized_doze$ $recipe.ingredient.name$$\n$}$Garnish:$cocktail.garnish$$\n$$cocktail.method$" 
